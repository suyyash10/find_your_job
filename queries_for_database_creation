drop database findmyjob;
commit;
create database findmyjob;
use findmyjob;
create table seeker_basicData(username varchar(20) primary key, email varchar(40), full_name varchar(50), gender varchar(50), dob date, education varchar(50), skills varchar(20),address varchar(50),post varchar(20));
create table seeker_loginData(username varchar(20) primary key, password varchar(300));
create table company_loginData(username varchar(20) primary key, password varchar(300));
create table company_basicData(username varchar(20) primary key, company_name varchar(30), company_email varchar(50), city varchar(20));
create table jobs(jobID int primary key, Post varchar(40), Description varchar(500), Company varchar(50), salary varchar(40), location varchar(40), skills varchar(30));
commit;

    